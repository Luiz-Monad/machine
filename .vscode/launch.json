    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch cmd",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/docker-machine/machine.go",
            "args": [
                "env", "--shell", "powershell"
                // "regenerate-certs", "--force"
            ],
            "env": {
                "MACHINE_PLUGIN_REATTACH": "127.0.0.1:55704",
                "MACHINE_DEBUG": "1",
                "MACHINE_NOHEART": "1",
                "GODEBUG": "execerrdot=0"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Launch plugin",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "drivers/docker-machine-driver-vmware/main.go",
            "args": [
            ],
            "env": {
                "MACHINE_DEBUG": "1",
                "MACHINE_PLUGIN_TOKEN": "42",
                "MACHINE_NOHEART": "1",
            }
        }
    ]
}